<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.MenuAppearance</item>
        <item name="actionMenuTextColor">@color/appColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/appColorPrimary</item>
    </style>

    <style name="AppTheme.MenuAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/action_fontsz</item>
        <item name="android:textColor">@color/appColorPrimary</item>
    </style>

</resources>
